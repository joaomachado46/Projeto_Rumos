@model Models.Produto

<div class="Login_Register_Page">
    <div class="form-row container">
        <form asp-action="SalvarImg" method="post" enctype="multipart/form-data" style="text-align: -webkit-center;">
            <h1>Carregar nova imagem de produto</h1>
            <hr />
            <input type="file" name="files" multiple="multiple" />
            <br />
            <input type="submit" name="Upload" class="btn btn-primary" value="Upload" />
            <br />
            <h4>@ViewBag.Message</h4>
            <hr />
        </form>
    </div>
    <div class="form-row container">
        <form asp-action="Create">
            <h1>Criar novo produto</h1>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" step="0.01">
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoFileName" class="control-label"></label>
                <input asp-for="PhotoFileName" placeholder="Colocar nome igual ao ficheiro de imagem (ex: nome.jpeg)" class="form-control" />
                <span asp-validation-for="PhotoFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <input asp-for="Url" value="@ViewBag.Url" class="form-control" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria.Nome" class="control-label"></label>
                <select asp-for="Categoria.Nome" class="form-control" asp-items="ViewBag.IdCategoria"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a style="font-size: inherit;" asp-controller="Produtos" asp-action="ListaProdutosGestao" type="button" class="btn btn-secondary">Voltar aos produtos</a>
            </div>
        </form>
        @if (ViewBag.Message2 != null)
        {
            <hr />
            <h1>@ViewBag.Message2</h1>
            <hr />
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
