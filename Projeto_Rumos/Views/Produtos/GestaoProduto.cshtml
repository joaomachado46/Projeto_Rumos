@model IEnumerable<Models.Produto>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewData["Title"] = "Produto";
}
<h1>@ViewData["Title"]</h1>
<div>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoFileName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Preco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descricao)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Stock)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="linha-produto">
                    <td id="tabelaDeImg">
                        <img id="img-produto" class="card-img-top" src="@item.Url" alt="Card image cap" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Preco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descricao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stock)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProdutoId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProdutoId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProdutoId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>