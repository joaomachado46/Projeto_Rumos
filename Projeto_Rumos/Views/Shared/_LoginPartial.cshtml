@using Microsoft.AspNetCore.Identity
@inject SignInManager<Projeto_Rumos.Areas.Identity.Pages.Account.UserData.ApplicationUser> SignInManager
@inject UserManager<Projeto_Rumos.Areas.Identity.Pages.Account.UserData.ApplicationUser> UserManager

<ul class="navbar-nav" style="position:absolute">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark">Sair?</button>
        </form>
    </li>
}
</ul>
