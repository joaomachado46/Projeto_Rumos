@page
@model RegisterModel
@{
    ViewData["Title"] = "Registo";
}



<div class="Login_Register_Page">
    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1>@ViewData["Title"]</h1>
        <h4>Criar uma nova conta</h4>
        <hr />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Registar</button>
        <hr />
        <div style="margin-bottom: 23px;">
            <img src="~/img/Imagens_site/facebook.png" alt="Alternate Text" />

            <img src="~/img/Imagens_site/instagram.png" alt="Alternate Text" />

            <img src="~/img/Imagens_site/youtube.png" alt="Alternate Text" />

            <img src="~/img/Imagens_site/vine.png" alt="Alternate Text" />
        </div>
    </form>
</div>
    

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
